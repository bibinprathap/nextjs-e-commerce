# Editor configuration, see https://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

[*.{jsx,js,tsx,ts}]
max_line_length = 120
end_of_line = lf

[*.json]
indent_size = 2
insert_final_newline = false

[*.md]
max_line_length = off
trim_trailing_whitespace = false
